<?xml version='1.0' encoding='UTF-8'?>
<synthetic xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd" xmlns="http://www.xebialabs.com/deployit/synthetic" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <type type="snyk.Server" extends="xlrelease.Configuration">
    <property name="url" category="input" label="Snyk Base URL" required="true"/>
    <property name="token" category="input" label="Snyk Auth TOKEN" required="true"/>
  </type>
  <type type="snyk.Task" extends="xlrelease.PythonScript" virtual="true">
    <property name="server" category="input" label="Snyk Server" referenced-type="snyk.Server" kind="ci" required="true" description="Snyk Server Configuration"/>
    <property name="orgId" category="input" label="Organization ID" description="The ID of the Snyk Organization that the test was carried out for" kind="string" required="true"/>
    <property name="scriptLocation" default="snyk/SnykTask.py" hidden="true"/>
    <property name="iconLocation" default="snyk_icon.png" hidden="true"/>
    <property name="taskColor" hidden="true" default="#4b45a9"/>
    <property name="classReload" category="input" default="true" hidden="true" kind="boolean"/>
  </type>
  <type type="snyk.ProjectCompliance" extends="snyk.Task">
    <property name="title" description="Snyk Project Compliance" default="Check Compliance"/>
    <property name="projId" category="input" label="Project ID" description="The ID of an existing project to check." kind="string" required="true"/>
    <property name="issues" category="output" kind="map_string_string"/>
    <!-- <property name="severity" label="Halt Severity Level" description="The severity level for minimal viability (ignore will not Halt)." kind="enum" required="true"> -->
    <property name="severity" category="input" label="Severity" description="The severity level for minimal viability (ignore will not Halt)." kind="enum" default="low">
      <enum-values>
        <value>low</value>
        <value>medium</value>
        <value>high</value>
        <value>ignore</value>
      </enum-values>
    </property>
  </type>
  <type type="snyk.ProjectsTile" label="Snyk Projects Tile" extends="xlrelease.Tile" description="Display all defined projects with issue severity">
    <property default="release,folder,global" hidden="true" name="supportedScopes" kind="list_of_string"/>
    <property name="uri" hidden="true" default="snyk/get-projects-tile-summary-view.html"/>
    <property name="title" description="Display name of the tile." default="Snyk Issues Summary"/>
    <property name="server" category="input" label="Snyk Server" referenced-type="snyk.Server" kind="ci"/>
    <property name="orgId" category="input" label="Organization ID" description="The ID of the Snyk Organization that owns the projects" kind="string" required="true"/>
    <property name="classReload" category="input" default="true" hidden="true" kind="boolean"/>
  </type>
</synthetic>
